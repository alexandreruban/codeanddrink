<div class="container">
  <div class="row">
    <h1>This is the ranking screen</h1>
    <div class="col-xs-4">
      <h2>Winners</h2>
      <%= render partial: 'players/players', locals: { players: players[:alive_players] } %>
    </div>
    <div class="col-xs-4">
      <h2>Still alive</h2>
      <%= render partial: 'players/players', locals: { players: players[:playing_players] } %>
    </div>
    <div class="col-xs-4">
      <h2>Losers</h2>
      <%= render partial: 'players/players', locals: { players: players[:defeated_players] } %>
    </div>
  </div>
</div>
