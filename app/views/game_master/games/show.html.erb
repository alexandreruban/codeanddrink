<div class="container">
  <div class="vertical-between">
    <div class="row">
      <div class="col-xs-4">
        <div class="progress">
          <div class="progress-bar" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"> </div>
          </div>
          <span class="badge">1</span>
        <div id="game-info">
          <h3>connect to the wifi</h3>
          <p> Network: <%= @game.wifi_network %></p>
          <p>Password: <%= @game.wifi_password %></p>
        </div>
      </div>
      <div class="col-xs-4">
        <div class="progress">
          <div class="progress-bar" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
          <span class="badge">2</span>
        <div id="game-info">
          <h3>Join the game</h3>
          <p>Go to codeanddrink.fun</p>
          <p>Choose your username </p>
          <p>Password: <%= @game.password %></p>
        </div>
      </div>
      <div class="col-xs-4">
        <div class="progress">
          <div class="progress-bar" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
          <span class="badge">3</span>
        <div id="game-info">
          <h3><%= @game.title %></h3>
          <p>Wait for the game to start</p>
          <p><%= @game.description %></p>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <div id="game-players">
          <ul>
            <% @players.each do |player| %>
            <li>
              <div class="avatar">
                <%= player.username %>
              </div>
            </li>
            <% end %>
          </ul>
          <p>
            <strong> <%= @players.count %> player(s) </strong>
          </p>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <div id="game-actions">
        <%= link_to "Start the round", game_master_game_rounds_path(@game), class: "button-lg button-yellow" %>
      </div>
      </div>
    </div>
  </div>
</div>
